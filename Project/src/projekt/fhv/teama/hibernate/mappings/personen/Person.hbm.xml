<?xml version='1.0' encoding='utf-8'?>
<hibernate-mapping xmlns="http://www.hibernate.org/xsd/hibernate-mapping"
        xsi:schemaLocation="http://www.hibernate.org/xsd/hibernate-mapping http://www.hibernate.org/xsd/hibernate-mapping/hibernate-mapping-4.0.xsd" 
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <class name="Entities.Person" table="person" schema="" catalog="hibernate">
        <id name="personId">
            <column name="personID" sql-type="int" length="10" not-null="true"/>
        </id>
        <property name="vorname">
            <column name="vorname" sql-type="varchar" not-null="true"/>
        </property>
        <property name="nachname">
            <column name="nachname" sql-type="varchar" not-null="true"/>
        </property>
        <property name="geschlecht">
            <column name="geschlecht" sql-type="char" length="1" not-null="true"/>
        </property>
        <property name="strasse">
            <column name="strasse" sql-type="varchar" not-null="true"/>
        </property>
        <property name="plz">
            <column name="plz" sql-type="varchar" not-null="true"/>
        </property>
        <property name="ort">
            <column name="ort" sql-type="varchar" not-null="true"/>
        </property>
        <property name="geburtsdatum">
            <column name="geburtsdatum" sql-type="date" length="10"/>
        </property>
        <property name="telefonnummer">
            <column name="telefonnummer" sql-type="varchar" not-null="true"/>
        </property>
        <property name="email">
            <column name="email" sql-type="varchar" not-null="true"/>
        </property>
        <property name="iban">
            <column name="iban" sql-type="varchar"/>
        </property>
        <property name="bic">
            <column name="bic" sql-type="varchar"/>
        </property>
        <property name="kontonummer">
            <column name="kontonummer" sql-type="varchar"/>
        </property>
        <property name="blz">
            <column name="blz" sql-type="varchar"/>
        </property>
    </class>
</hibernate-mapping>