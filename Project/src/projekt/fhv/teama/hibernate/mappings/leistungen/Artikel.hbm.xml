<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <joined-subclass name="projekt.fhv.teama.classes.leistungen.Artikel" extends="projekt.fhv.teama.classes.leistungen.Leistung" table="ARTIKEL" lazy="false">
        <key column="artikelID"/>

        <property name="preis" type="float">
            <column name="PREIS" />
        </property>
        <property name="beschreibung" type="java.lang.String">
            <column name="BESCHREIBUNG" />
        </property>
        <many-to-one name="warengruppe" class="projekt.fhv.teama.classes.leistungen.Warengruppe" column="WARENGRUPPEID" />
    </joined-subclass>
</hibernate-mapping>
